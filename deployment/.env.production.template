# Production Environment Configuration
# Copy this file to .env.production and update the values

# Application Configuration
NODE_ENV=production
PORT=3001
FRONTEND_URL=https://your-domain.com

# Database Configuration
DATABASE_URL="postgresql://speakingtest:YOUR_SECURE_DB_PASSWORD@localhost:5432/speakingtest_prod"

# JWT Configuration
JWT_SECRET="your-super-secure-jwt-secret-minimum-32-characters-long"
JWT_EXPIRES_IN="24h"

# SMS Configuration (Update with your SMS provider details)
SMS_API_KEY="your-sms-api-key"
SMS_API_SECRET="your-sms-api-secret"
SMS_SENDER_ID="10MS"
SMS_BASE_URL="https://api.your-sms-provider.com"

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN="https://your-domain.com"
CORS_CREDENTIALS=true

# Monitoring and Logging
LOG_LEVEL="info"
ENABLE_AUDIT_LOGS=true
HEALTH_CHECK_INTERVAL=30000
MONITOR_LOG_FILE="/var/log/speaking-test-booking/monitor.log"

# File Upload Configuration
MAX_FILE_SIZE="10mb"
UPLOAD_PATH="/var/www/speaking-test-booking/uploads"

# Email Configuration (for notifications and alerts)
SMTP_HOST="smtp.your-email-provider.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="noreply@your-domain.com"
SMTP_PASS="your-email-password"
ADMIN_EMAIL="admin@your-domain.com"

# Backup Configuration
BACKUP_RETENTION_DAYS=30
AUDIT_LOG_RETENTION_DAYS=90
BACKUP_SCHEDULE="0 2 * * *"

# SSL Configuration
SSL_CERT_PATH="/etc/letsencrypt/live/your-domain.com/fullchain.pem"
SSL_KEY_PATH="/etc/letsencrypt/live/your-domain.com/privkey.pem"

# Performance Configuration
MAX_CONNECTIONS=200
CONNECTION_TIMEOUT=60000
QUERY_TIMEOUT=30000

# Feature Flags
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_AUDIT_LOGGING=true
ENABLE_RATE_LIMITING=true
ENABLE_MONITORING=true

# External Service URLs
HEALTH_CHECK_URL="http://localhost:3001/health"
METRICS_ENDPOINT="http://localhost:3001/health/detailed"

# Timezone Configuration
TZ="Asia/Dhaka"

# Session Configuration
SESSION_SECRET="your-session-secret-key"
SESSION_TIMEOUT=86400000

# Cache Configuration (if using Redis in future)
# REDIS_URL="redis://localhost:6379"
# CACHE_TTL=3600

# Notification Templates
BOOKING_CONFIRMATION_TEMPLATE="Your speaking test is confirmed for {date} at {time} with {teacher}. Branch: {branch}. Booking ID: {bookingId}"
BOOKING_REMINDER_TEMPLATE="Reminder: Your speaking test is tomorrow at {time} with {teacher}. Branch: {branch}. Please arrive 10 minutes early."
BOOKING_CANCELLATION_TEMPLATE="Your speaking test scheduled for {date} at {time} has been cancelled. Please reschedule at your convenience."